{
  "manifest_version": 3,
  "name": "Tab Merge",
  "version": "1.0",

  "permissions": ["tabs", "storage", "activeTab", "tabGroups"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png"
  }
}
